{
    "$schema": "http://localhost:3000/schemas/v1.json",
    "name": "hayes-introduction-text",
    "namespace": "hayes-introduction-text-db",
    "displayName": "[Hayes] Introduction Text",
    "description": "Block of text to be used under the banner on the home page. Used as an introduction to the site/node outlining who (group), what they do and what to expect.",
    "version": "0.0.5",
    "mainFunction": "main",
    "type": "edge",
    "icon": {
        "id": "fiber_new",
        "color": {
            "type": "enum",
            "value": "blue"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.cjs",
            "input": {
                "type": "object",
                "properties": {
                    "backgroundColour": {
                        "type": "string",
                        "title": "Background colour",
                        "description": "Sets the background colour from the wrapper level",
                        "oneOf": [
                            {"enum": ["jcu-v1__bg-color__white"], "title": "White"},
                            {"enum": ["jcu-v1__bg-color__sand-2"], "title": "sand-2"}
                        ],
                        "default": "jcu-v1__bg-color__white"
                    },
                    "headerText": {
                        "type": "string",
                        "title": "Header text",
                        "description": "Sets the components header on page"
                    },
                    "text": {
                        "type": "FormattedText",
                        "title": "Introduction Text",
                        "description": "Text to be used in the introduction."
                    }
                },
                "required": ["text"]
            },
            "output": {
                "responseType": "html",
                "staticFiles": [
                    {
                        "location": "header",
                        "file": {
                            "type": "css",
                            "filepath": "default.css"
                        }
                    },
                    {
                        "location": "footer",
                        "file": {
                            "type": "js",
                            "filepath": "default.js"
                        }
                    }
                ]
            }
        }
    ],
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "previews/example.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview-wrapper-hayes.html"
                    }
                }
            }
        }
    },
    "staticFiles": {
        "locationRoot": "static"
    }
}