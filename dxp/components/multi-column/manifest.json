{
    "$schema": "http://localhost:3000/schemas/v1.json",
    "name": "multi-column",
    "namespace": "multi-column-db",
    "displayName": "Multi Column Text",
    "description": "1-3 column text options, can also be used as an intro text on full width pages. Option for a CTA link or drop down content with each column.",
    "version": "0.0.1",
    "mainFunction": "main",
    "type": "edge",
    "icon": {
        "id": "fiber_new",
        "color": {
            "type": "enum",
            "value": "blue"
        }
    },
    "functions": [
        {
            "name": "main",
            "entry": "main.cjs",
            "input": {
                "type": "object",
                "properties": {
                    "uniqueID": {
                        "type": "string",
                        "title": "Unique ID",
                        "description": "Unique ID to be set on the wrapper level."
                    },
                    "paddingTop": {
                        "type": "string",
                        "title": "Space above",
                        "description": "Padding size above wrapper.",
                        "oneOf": [
                            {
                                "enum": [
                                    "default"
                                ],
                                "title": "Default"
                            },
                            {
                                "enum": [
                                    "p-t-0"
                                ],
                                "title": "none"
                            }
                        ],
                        "default": "default"
                    },
                    "paddingBottom": {
                        "type": "string",
                        "title": "Space below",
                        "description": "Padding size below wrapper.",
                        "oneOf": [
                            {
                                "enum": [
                                    "default"
                                ],
                                "title": "Default"
                            },
                            {
                                "enum": [
                                    "p-b-0"
                                ],
                                "title": "none"
                            }
                        ],
                        "default": "default"
                    },
                    "backgroundColour": {
                        "type": "string",
                        "title": "Background colour",
                        "description": "Sets the background colour from the wrapper level",
                        "oneOf": [
                            {
                                "enum": [
                                    "bg-white"
                                ],
                                "title": "White"
                            },
                            {
                                "enum": [
                                    "bg-sand-2"
                                ],
                                "title": "Beige"
                            },
                            {
                                "enum": [
                                    "bg-ocean-3"
                                ],
                                "title": "Mid Blue"
                            }
                        ],
                        "default": "bg-white"
                    },
                    "headerText": {
                        "type": "string",
                        "title": "Header text",
                        "description": "Sets the components header on page"
                    },
                    "items": {
                        "type": "array",
                        "title": "Columns",
                        "description": "Each entry is a new column, minimum of 2 maximum of 3.",
                        "minItems": 1,
                        "maxItems": 3,
                        "items": {
                            "type": "object",
                            "title": "Column",
                            "required": [
                                "columnText"
                            ],
                            "properties": {
                                "columnHeader": {
                                    "type": "string",
                                    "title": "Column Header",
                                    "description": "Column header, it is a h2 if there is no header in the wrapper, or a h3 if there is a header in the wrapper."
                                },
                                "columnText": {
                                    "type": "FormattedText",
                                    "title": "Body Text",
                                    "description": "Visible body text that displays in the column"
                                },
                                "dropDownContent": {
                                    "type": "FormattedText",
                                    "title": "Drop down content",
                                    "description": "Only one of drop down content or CTA link should be filled"
                                },
                                "cta": {
                                    "type": "SquizLink",
                                    "title": "CTA Link",
                                    "description": "Only one of drop down content or CTA link should be filled"
                                }
                            }
                        }
                    }
                },
                "required": [
                    "paddingTop",
                    "paddingBottom",
                    "backgroundColour"
                ]
            },
            "output": {
                "responseType": "html"
            }
        }
    ],
    "previews": {
        "default": {
            "functionData": {
                "main": {
                    "inputData": {
                        "type": "file",
                        "path": "previews/example.data.json"
                    },
                    "wrapper": {
                        "path": "previews/preview.html"
                    }
                }
            }
        }
    }
}